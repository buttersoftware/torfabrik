{% extends 'pspiessBlogBundle::layout.html.twig' %}

{% block title %}Unterkategorie{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    <link href="{{ asset('resources/css/jquery-ui.min.css')}}" rel="stylesheet">
    <link href="{{ asset('resources/css/jquery-ui.custom.min.css')}}" rel="stylesheet">
{% endblock %}

{#{% block nav %}
  {{ knp_menu_render('pspiessLetsplayBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'pspiessLetsplayBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}#}

{% block body -%}
    <div class="page_block">
        
        {{ include('pspiessBlogBundle:Elements:header.html.twig') }}

        <!-- CONTAINER -->
        <div class="container">
            <div class="row">
                <!-- Shop Products -->
                <div class="col-lg-12 col-sm-12">
                    <div class="sorting_options clearfix">
                        {{ include('pspiessBlogBundle:Elements:search.html.twig') }}
                    </div>
                    <ul>
                        <li>
                            <a class="btn btn-xs" href="{{ path('pspiess_blog_subcategory_new') }}">
                                Neue Unterkategorie anlegen
                            </a>
                        </li>
                    </ul>
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Nr.</th>
                                <th>Bezeichnung</th>
                                <th>Beschreibung</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.number }}</td>
                                    <td>{{ entity.description }}</td>
                                    <td>{{ entity.note }}</td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a class="btn btn-xs" href="{{ path('pspiess_blog_subcategory_edit', { 'id': entity.id }) }}">anpassen</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <ul class="navigation">
                        {{ knp_pagination_render(entities) }}
                    </ul>
                </div>
            </div>
        </div><!-- //CONTAINER -->

       {{ include('pspiessBlogBundle:Elements:footer.html.twig') }}
    </div><!-- //PAGE BLOCK -->
{% endblock %}

{% block javascripts %}
    {{ parent()}}
    <script src="{{ asset('resources/js/ace-extra.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/jquery-ui.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/jquery-ui.custom.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/jquery.ui.touch-punch.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/bootbox.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}
