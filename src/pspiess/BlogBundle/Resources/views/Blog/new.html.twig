{% extends 'pspiessBlogBundle::layout.html.twig' %}

{% block title %}Unterkategorie{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    <link href="{{ asset('resources/css/jquery-ui.min.css')}}" rel="stylesheet">
    <link href="{{ asset('resources/css/jquery-ui.custom.min.css')}}" rel="stylesheet">
{% endblock %}

{#{% block nav %}
  {{ knp_menu_render('pspiessLetsplayBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'pspiessLetsplayBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}#}

{% block body -%}
    <div class="page_block">
        {{ include('pspiessBlogBundle:Elements:header.html.twig') }}

        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12">
                    <h1>Neuen Eintrag anlegen</h1>
                    {{ form_start(form, {attr: {class: 'form-horizontal'}}) }}

                    {{ form_label(form.date) }}
                    {{ form_widget(form.date) }}

                    {{ form_label(form.blogname) }}
                    {{ form_widget(form.blogname) }}

                    {{ form_label(form.street) }}
                    {{ form_widget(form.street) }}

                    {{ form_label(form.zip) }}
                    {{ form_widget(form.zip) }}

                    {{ form_label(form.location) }}
                    {{ form_widget(form.location) }}

                    {{ form_label(form.state) }}
                    {{ form_widget(form.state) }}

                    {{ form_label(form.country) }}
                    {{ form_widget(form.country) }}

                    {{ form_label(form.website) }}
                    {{ form_widget(form.website) }}

                    {{ form_label(form.thumbnail) }}
                    {{ form_widget(form.thumbnail) }}

                    {{ form_label(form.picture) }}
                    {{ form_widget(form.picture) }}

                    {{ form_label(form.favicon) }}
                    {{ form_widget(form.favicon) }}
                    
                    {{ form_label(form.active) }}
                    {{ form_widget(form.active) }}

                    {{ form_label(form.rank) }}
                    {{ form_widget(form.rank) }}

                    {{ form_label(form.onstart) }}
                    {{ form_widget(form.onstart) }}

                    {{ form_label(form.random) }}
                    {{ form_widget(form.random) }}
                    
                    {{ form_label(form.contact) }}
                    {{ form_widget(form.contact) }}

                    {{ form_label(form.maincategory) }}
                    {{ form_widget(form.maincategory) }}

                    {{ form_label(form.subcategory) }}
                    {{ form_widget(form.subcategory) }}

                    {{ form_label(form.note) }}
                    {{ form_widget(form.note) }}
                    <br>
                    <div class="form-group">
                        <div class="col-sm-1">
                            <a class="btn" href="{{ path('pspiess_blog_blog') }}">Abbrechen</a>
                        </div>
                        <div class="col-sm-offset-1 col-sm-1">
                            {{ form_widget(form.submit) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div><!-- //CONTAINER -->

        {{ include('pspiessBlogBundle:Elements:footer.html.twig') }}
    </div><!-- //PAGE BLOCK -->
{% endblock %}

{% block javascripts %}
    {{ parent()}}
    <script src="{{ asset('resources/js/ace-extra.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/jquery-ui.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/jquery-ui.custom.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/jquery.ui.touch-punch.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/bootbox.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}
