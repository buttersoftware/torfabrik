{% extends 'pspiessBlogBundle::layout.html.twig' %}

{% block title %}Linkliste{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    <link href="{{ asset('resources/css/jquery-ui.min.css')}}" rel="stylesheet">
    <link href="{{ asset('resources/css/jquery-ui.custom.min.css')}}" rel="stylesheet">
{% endblock %}

{#{% block nav %}
  {{ knp_menu_render('pspiessLetsplayBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'pspiessLetsplayBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}#}

{% block body -%}
    <div class="page_block">
        {{ include('pspiessBlogBundle:Elements:header.html.twig') }}

        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12">
                    <h1>Eintrag ändern</h1>
                    {{ form_start(edit_form, {attr: {class: 'form-horizontal'}}) }}

                    {{ form_label(edit_form.date) }}
                    {{ form_widget(edit_form.date) }}

                    {{ form_label(edit_form.blogname) }}
                    {{ form_widget(edit_form.blogname) }}

                    {{ form_label(edit_form.street) }}
                    {{ form_widget(edit_form.street) }}

                    {{ form_label(edit_form.zip) }}
                    {{ form_widget(edit_form.zip) }}

                    {{ form_label(edit_form.location) }}
                    {{ form_widget(edit_form.location) }}

                    {{ form_label(edit_form.state) }}
                    {{ form_widget(edit_form.state) }}

                    {{ form_label(edit_form.country) }}
                    {{ form_widget(edit_form.country) }}

                    {{ form_label(edit_form.website) }}
                    {{ form_widget(edit_form.website) }}

                    {{ form_label(edit_form.thumbnail) }}
                    {{ form_widget(edit_form.thumbnail) }}

                    {% if edit_form.vars.value.path is not null %}
                        <span class="profile-picture">
                            <img id="avatar" class="editable img-responsive" alt="{{ edit_form.vars.value.blogname }}"
                                 src="{{ asset('resources/images/blog/' ~ edit_form.vars.value.id ~ '/' ~ edit_form.vars.value.path) }}" />
                        </span>
                    {% endif %}

                    {{ form_label(edit_form.picture) }}
                    {{ form_widget(edit_form.picture) }}

                    {% if edit_form.vars.value.faviconpath is not null %}
                        <span class="profile-picture">
                            <img id="avatar" class="editable img-responsive" alt="{{ edit_form.vars.value.blogname }}"
                                 src="{{ asset('resources/images/blog/' ~ edit_form.vars.value.id ~ '/' ~ edit_form.vars.value.faviconpath) }}" />
                        </span>
                    {% endif %}

                    {{ form_label(edit_form.favicon) }}
                    {{ form_widget(edit_form.favicon) }}

                    {{ form_label(edit_form.active) }}
                    {{ form_widget(edit_form.active) }}

                    {{ form_label(edit_form.rank) }}
                    {{ form_widget(edit_form.rank) }}

                    {{ form_label(edit_form.onstart) }}
                    {{ form_widget(edit_form.onstart) }}

                    {{ form_label(edit_form.random) }}
                    {{ form_widget(edit_form.random) }}

                    {{ form_label(edit_form.contact) }}
                    {{ form_widget(edit_form.contact) }}

                    {{ form_label(edit_form.maincategory) }}
                    {{ form_widget(edit_form.maincategory) }}

                    {{ form_label(edit_form.subcategory) }}
                    {{ form_widget(edit_form.subcategory) }}

                    {{ form_label(edit_form.note) }}
                    {{ form_widget(edit_form.note) }}
                    <br>
                    <div class="form-group">
                        <div class="col-sm-1">
                            <a class="btn" href="{{ path('pspiess_blog_blog') }}">Abbrechen</a>
                        </div>
                        <div class="col-sm-offset-1 col-sm-1">
                            {{ form_widget(edit_form.submit) }}
                        </div>
                        {{ form_end(edit_form) }}
                        <div class="col-sm-offset-1 col-sm-1">
                            {{ form(delete_form, {'attr': {'onclick': 'return confirm("Datensatz löschen?")'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- //CONTAINER -->
        {{ include('pspiessBlogBundle:Elements:footer.html.twig') }}
    </div><!-- //PAGE BLOCK -->
{% endblock %}

{% block javascripts %}
    {{ parent()}}
    <script src="{{ asset('resources/js/ace-extra.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/jquery-ui.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/jquery-ui.custom.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/jquery.ui.touch-punch.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/bootbox.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}
