{% extends 'pspiessLetsplayBundle::layout.html.twig' %}

{% block title %}Tarife ändern{% endblock %}

{% block nav %}
    {{ knp_menu_render('pspiessLetsplayBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'pspiessLetsplayBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}

{% block body -%}
<div class="page-content-area">
    <div class="col-xs-12 col-sm-6">
        <div class="widget-box">
            <div class="widget-header">
                <h4 class="widget-title">Ausgew&auml;lten Tarif anpassen</h4>
            </div>
            {#{{ form(edit_form) }}#}
            <div class="widget-body">
                <div class="widget-main">

                    {{ form_start(edit_form, {attr: {class: 'form-horizontal'}}) }}
                        {#{{ form_widget(edit_form, {'form_type': 's'}) }}#}
                    {#{{ form_start(edit_form) }}#}

                    <div class="form-group">
                        {{ form_label(edit_form.indentifier, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                        <div class="col-sm-9">
                            {{ form_widget    (edit_form.indentifier) }} 
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="form-group"> <!-- nested form-group acting like row -->
                                {{ form_label(edit_form.weekdayfrom, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                                <div class="col-sm-2">
                                    {{ form_widget (edit_form.weekdayfrom) }}
                                </div>
                                <div class="col-sm-2">
                                    {{ form_widget (edit_form.weekdayto) }} 
                                </div>
                            </div> <!-- /nested form-group acting like row -->
                        </div><!-- /col-sm-offset-3 col-sm-9 -->
                    </div><!-- /form-group -->
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="form-group">
                                {{ form_label(edit_form.timefrom, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                                <div class="col-sm-2">
                                    {{ form_widget (edit_form.timefrom) }}
                                </div>
                                <div class="col-sm-2">
                                    {{ form_widget (edit_form.timeto) }} 
                                </div>
                            </div> 
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="form-group">
                                {{ form_label(edit_form.price, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                                <div class="col-sm-2">
                                    {{ form_widget (edit_form.price) }}
                                </div>
                            </div> 
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.fields, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                        <div class="col-sm-9">
                            {{ form_widget    (edit_form.fields) }} 
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.note, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                        <div class="col-sm-9">
                            {{ form_widget    (edit_form.note) }} 
                        </div>
                    </div>
                    <div class="hr hr-24"></div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-1">
                            <a class="btn btn-info" href="{{ path('pspiess_letsplay_price') }}">zur&uuml;ck</a>
                        </div>

                        <div class="col-sm-offset-1 col-sm-1">
                            {{ form_widget(edit_form.submit) }}
                        </div>
                        {{ form_end(edit_form) }}
                        <div class="col-sm-offset-1 col-sm-1">
                        {{ form_start(delete_form) }}
                            <button type="submit" class="btn btn-danger">
                                löschen
                            </button>
                        {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.span -->
    </div><!-- /.row -->    
</div>
{% endblock %}
