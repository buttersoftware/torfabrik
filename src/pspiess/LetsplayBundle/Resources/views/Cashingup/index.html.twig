{% extends 'pspiessLetsplayBundle::layout.html.twig' %}

{% block title %}Preise{% endblock %}

{% block nav %}
    {{ knp_menu_render('pspiessLetsplayBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'pspiessLetsplayBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}

{% block body -%}
    <div class="page-content-area">
        <div class="page-header">
            <h1>
                Tagesabschluss
                <small><i class="ace-icon fa fa-angle-double-right"></i> Alle Tagesabschl&uuml;sse</small>
                <div class="col-md-2 pull-right">
                    <a class="btn btn-success" href="{{ path('pspiess_letsplay_cashingup_new') }}"> Neu</a>
                </div>
            </h1>
        </div><!-- /.page-header -->
        <div class="col-xs-12">
            <div class="row">
                <div class="col-md-offset-1 col-xs-10">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Daydate</th>
                                <th>Umsatz SOLL</th>
                                <th>Umsatz IST</th>
                                <th>Bemerkung</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{% if entity.daydate %}{{ entity.daydate|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{{ entity.nominal }}</td>
                                    <td>{{ entity.actual }}</td>
                                    <td>{{ entity.note }}</td>
                                    <td>
                                        <a class="btn btn-xs btn-info" href="{{ path('pspiess_letsplay_invoice_show', { 'id': entity.id }) }}">
                                            <i class="ace-icon fa fa-eye icon-only"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.span -->
            </div><!-- /.row -->
            <div class="hr hr-18 dotted hr-double"></div>
        </div>
    </div>
{% endblock %}