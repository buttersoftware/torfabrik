{% extends 'pspiessLetsplayBundle::layout.html.twig' %}

{% block title %}Tarife ändern{% endblock %}

{% block nav %}
    {{ knp_menu_render('pspiessLetsplayBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'pspiessLetsplayBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}

{% block body -%}
    <div class="page-content-area">
        <div class="col-xs-12 col-sm-6">
            <div class="widget-box">
                <div class="widget-header">
                    <h4 class="widget-title">Kassenabschluss durchf&uuml;ren</h4>
                </div>
                <div class="widget-body">
                    <div class="widget-main">
                        {{ form_start(form, {attr: {class: 'form-horizontal' }}) }}
                        <div class="form-group">
                            {{ form_label(form.daydate, null, {'label_attr': {'class': 'col-sm-2' }}) }}
                            <div class="col-sm-9">
                                {{ form_widget    (form.daydate) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.nominal, null, {'label_attr': {'class': 'col-sm-2' }}) }}
                            <div class="col-sm-3">
                                {{ form_widget    (form.nominal) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.actual, null, {'label_attr': {'class': 'col-sm-2' }}) }}
                                <div class="col-sm-3">
                                    {{ form_widget (form.actual) }}
                                </div>
                            </div>
                            <!-- /nested form-group acting like row -->
                        </div>
                        <!-- /form-group -->
                        <div class="form-group">
                            {{ form_label(form.nominalec, null, {'label_attr': {'class': 'col-sm-2' }}) }}
                            <div class="col-sm-3">
                                {{ form_widget    (form.nominalec) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.actualec, null, {'label_attr': {'class': 'col-sm-2' }}) }}
                                <div class="col-sm-3">
                                    {{ form_widget (form.actualec) }}
                                </div>
                            </div>
                            <!-- /nested form-group acting like row -->
                        </div>
                        <!-- /form-group -->
                        <div class="form-group">
                            {{ form_label(form.note, null, {'label_attr': {'class': 'col-sm-2' }}) }}
                            <div class="col-sm-9">
                                {{ form_widget    (form.note) }}
                            </div>
                        </div>
                        <div class="hr hr-24"></div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-1">
                                <a class="btn btn-info" href="{{ path('pspiess_letsplay_cashingup') }}">zur&uuml;ck</a>
                            </div>

                            <div class="col-sm-offset-1 col-sm-1">
                                {{ form_widget(form.submit) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.span -->
        </div>
        <!-- /.row -->
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-noty/2.3.7/packaged/jquery.noty.packaged.min.js"></script>
    <script type="text/javascript">
        $("#pspiess_letsplaybundle_cashingup_submit").click(function () {
            if ($('#pspiess_letsplaybundle_cashingup_nominal').val() != $('#pspiess_letsplaybundle_cashingup_actual').val()) {
                noty({
                    text: 'Achtung der Bar Betrag stimmt nicht überein!',
                    type: 'error',
                    layout: 'center',
                    timeout: 10000
                });
                return false;
            }
            if ($('#pspiess_letsplaybundle_cashingup_nominalec').val() != $('#pspiess_letsplaybundle_cashingup_actualec').val()) {
                noty({
                    text: 'Achtung der EC Betrag stimmt nicht überein!',
                    type: 'error',
                    layout: 'center',
                    timeout: 10000
                });
                return false;
            }
        });
    </script>
{% endblock %}