{% extends 'pspiessLetsplayBundle::layout.html.twig' %}

{% block title %}Rechnung{% endblock %}

{% block nav %}
    {{ knp_menu_render('pspiessLetsplayBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'pspiessLetsplayBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}

{% block body -%}
    <div class="page-content-area">
        {{ form_start(form, {attr: {class: '' }}) }}
        <div class="col-sm-6 col-lg-12">
            <div class="col-sm-6 col-lg-10">
                <h3 class="widget-title grey lighter" style="float:left">Rechnungspr&uuml;fung</h3>
            </div>
            <div class="col-sm-6 col-lg-2" style="padding-top: 12px;">
                {{ form_widget (form.date) }}
            </div>
        </div>

        <div class="col-sm-12 col-lg-12">
            <div class="hr hr8 hr-double hr-dotted"></div>
            <div class="col-sm-6 col-lg-6">
                <div class="col-xs-12 col-sm-12 widget-container-col">
                    <div class="widget-box collapsed">
                        <div class="widget-header">
                            <h5 class="widget-title">TorFabrik Sport &amp; Event GmbH</h5>

                            <div class="widget-toolbar">
                                <a href="#" data-action="collapse"><i class="ace-icon fa fa-chevron-up"></i></a>
                            </div>
                        </div>

                        <div class="widget-body">
                            <div class="widget-main">
                                {{ form_label(form.taxNumber, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.taxNumber) }}
                                {{ form_label(form.companyLocation, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.companyLocation) }}
                                {{ form_label(form.companyStreet, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.companyStreet) }}
                                {{ form_label(form.companyPhone, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.companyPhone) }}
                                {{ form_label(form.companyZip, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.companyZip) }}
                                {{ form_label(form.companyCountry, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.companyCountry) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-6">
                <div class="col-xs-12 col-sm-12 widget-container-col">
                    <div class="widget-box collapsed widget-color-green2">
                        <div class="widget-header">
                            <h5 class="widget-title">Rechnung an</h5>

                            <div class="widget-toolbar">
                                <a href="#" data-action="collapse"><i class="ace-icon fa fa-chevron-up"></i></a>
                            </div>
                        </div>

                        <div class="widget-body">
                            <div class="widget-main">
                                {{ form_label(form.customerNumber, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.customerNumber) }}
                                {{ form_label(form.customerFirstname, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.customerFirstname) }}
                                {{ form_label(form.customerLocation, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.customerLocation) }}
                                {{ form_label(form.customerStreet, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.customerStreet) }}
                                {{ form_label(form.customerPhone, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.customerPhone) }}
                                {{ form_label(form.customerName, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.customerName) }}
                                {{ form_label(form.customerZip, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.customerZip) }}
                                {{ form_label(form.customerCountry, null, {'label_attr': {'class': '' }}) }}
                                {{ form_widget (form.customerCountry) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th width="5%">#</th>
                    <th width="40%">Produkt</th>
                    <th width="45%">Beschreibung</th>
                    <th width="10%">Preis</th>
                </tr>
                </thead>
                <tbody>
                {% for invoicepos in form.invoicepos %}
                    <tr>
                        <td>{{ form_widget(invoicepos.pos) }}</td>
                        <td>{{ form_widget(invoicepos.product) }}</td>
                        <td>{{ form_widget(invoicepos.description) }}</td>
                        <td>{{ form_widget(invoicepos.totalPrice) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div style="display: none;">{{ form_widget(form.invoicepos) }}</div>
        <div class="col-lg-12">
            <div class="col-sm-3">
                <div class="form-group">
                    {{ form_label(form.payment, null, {'label_attr': {'class': '' }}) }}
                    <div class="">
                        <span class="red">{{ form_widget (form.payment) }}</span>

                    </div>
                </div>
            </div>
            <div class="col-sm-3 pull-right">
                <div class="form-group">
                    {{ form_label(form.TotalPricenet, null, {'label_attr': {'class': '' }}) }}
                    <div class="">
                        <span class="red">{{ form_widget (form.TotalPricenet) }}</span>

                    </div>
                </div>
            </div>

            <div class="col-sm-3 pull-right">
                <div class="form-group">
                    {{ form_label(form.PaidPrice, null, {'label_attr': {'class': '' }}) }}
                    <div class="">
                        {{ form_widget (form.PaidPrice) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="col-sm-9">
                <div class="form-group">
                    {{ form_label(form.note, null, {'label_attr': {'class': '' }}) }}
                    <div class="">
                        {{ form_widget (form.note) }}
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    {{ form_label(form.tax, null, {'label_attr': {'class': '' }}) }}
                    <div class="">
                        <span class="red">{{ form_widget (form.tax) }}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="col-sm-9">
                {{ form_widget(form.submit) }}
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    {{ form_label(form.TotalPrice, null, {'label_attr': {'class': '' }}) }}
                    <div class="">
                        <span class="red">{{ form_widget (form.TotalPrice) }}</span>

                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('resources/js/ace-extra.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/jquery-ui.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/jquery-ui.custom.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/jquery.ui.touch-punch.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/date-time/moment.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/date-time/bootstrap-datepicker.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/fullcalendar/fullcalendar.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/fullcalendar/lang/de.js') }}" type="text/javascript"></script>
    <script src="{{ asset('resources/js/bootbox.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

    <script type="text/javascript">
        function calculatePrices() {
            var totalPrice = 0;
            var totalPricenet = 0;
            $('input[type=text][name^="pspiess_letsplaybundle_invoice[invoicepos]"][name$="[totalPrice]"]').each(function (index) {
                totalPrice = Number(totalPrice) + Number($(this).val().replace(',', '.'));
                totalPricenet = totalPrice / (19 / 100 + 1);
            });
            $('input[id=pspiess_letsplaybundle_invoice_PaidPrice]').val(totalPrice.toFixed(2));
            $('input[id=pspiess_letsplaybundle_invoice_TotalPricenet]').val(totalPricenet.toFixed(2));
            $('input[id=pspiess_letsplaybundle_invoice_tax]').val((totalPrice - totalPricenet).toFixed(2));
            $('input[id=pspiess_letsplaybundle_invoice_TotalPrice]').val(totalPrice.toFixed(2));
        }

        $(function () {
            $('input[type=text][name^="pspiess_letsplaybundle_invoice[invoicepos]"][name$="[totalPrice]"]').change(function () {
                calculatePrices();
            });
        });
    </script>
{% endblock %}

