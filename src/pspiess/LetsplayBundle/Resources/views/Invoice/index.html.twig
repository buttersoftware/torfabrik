{% extends 'pspiessLetsplayBundle::layout.html.twig' %}

{% block title %}Preise{% endblock %}

{% block nav %}
    {{ knp_menu_render('pspiessLetsplayBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'pspiessLetsplayBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}

{% block body -%}
    <div class="page-content-area">
        <div class="page-header">
            <h1>
                Rechnungen
                <small><i class="ace-icon fa fa-angle-double-right"></i> Alle Rechnungen</small>
            </h1>
        </div><!-- /.page-header -->
        <div class="col-xs-12">
            <div class="col-md-offset-1 col-xs-10">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                        <tr>
                            <th>Nummer</th>
                            <th>Datum</th>
                            <th>Kundennummer</th>
                            <th>Kundenname</th>
                            <th>Gesamtbetrag</th>
                            <th>Betragbezahlt</th>
                            <th>Bemerkung</th>
                            <th></th>
                        </tr>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.invoiceNumber }}</td>
                                <td>{% if entity.date %}{{ entity.date|date('d.m.Y') }}{% endif %}</td>
                                <td>{{ entity.customerNumber }}</td>
                                <td>{{ entity.customerFirstname }}, {{ entity.CustomerName }}</td>
                                <td>{{ entity.TotalPrice|number_format(2, ',', '.') }} &euro;</td>
                                <td>{{ entity.PaidPrice|number_format(2, ',', '.') }} &euro;</td>
                                <td>{{ entity.note }}</td>
                                <td>
                                    <a class="btn btn-xs btn-info" href="{{ path('pspiess_letsplay_invoice_show', { 'id': entity.id }) }}">
                                        <i class="ace-icon fa fa-eye icon-only"></i>
                                    </a>
                                </td>
                                {#<td>
                                    <div class="hidden-sm hidden-xs btn-group">
                                        {{ form_start(deleteForms[entity.id]) }}
                                        <div class="hidden-sm hidden-xs btn-group">
                                            <a class="btn btn-xs btn-info" href="{{ path('pspiess_letsplay_field_edit', { 'id': entity.id }) }}">
                                                <i class="ace-icon fa fa-pencil icon-only"></i>
                                            </a>
                                            <button type="submit" class="btn btn-danger btn-xs">
                                                <i class="ace-icon fa fa-trash-o icon-only"></i>
                                            </button>
                                        </div>
                                            {{ form_end(deleteForms[entity.id]) }}
                                    </div>
                                </td>#}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}