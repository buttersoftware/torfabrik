<div id="dialog_new_customer" class="hide">
    <div class="col-xs-12 col-lg-12">
        <form id="newprompt" class="form-horizontal">
            {#<input id="customer_id" type="hidden" class="form-control"/>#}
            <div class="form-group">
                <label for="customer_title" class="control-label col-xs-2">Anrede</label>

                <div class="col-xs-4">
                    <select id="customer_title" name="customer_title">
                        <option name="Herr" value="Herr"> Herr</option>
                        <option name="Frau" value="Frau"> Frau</option>
                    </select>
                </div>
                <label for="customer_sex" class="control-label col-xs-2">Geschlecht</label>

                <div class="col-xs-4">
                    <select id="customer_sex" name="customer_sex">
                        <option name="Mann" value="Mann"> Mann</option>
                        <option name="Frau" value="Frau"> Frau</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="customer_firstname" class="control-label col-xs-2">Vorname</label>

                <div class="col-xs-4">
                    <input id="customer_firstname" class="input-xxlarge" type="text" class="form-control"/>
                </div>
                <label for="customer_name" class="control-label col-xs-2">Nachname</label>

                <div class="col-xs-4">
                    <input id="customer_name" class="input-xxlarge" type="text" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <label for="customer_email" class="control-label col-xs-2">Email</label>

                <div class="col-xs-4">
                    <input id="customer_email" class="input-xxlarge" type="text" class="form-control"/>
                </div>
                <label for="customer_phone" class="control-label col-xs-2">Telefon</label>

                <div class="col-xs-4">
                    <input id="customer_phone" class="input-xxlarge" type="text" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <label for="customer_street" class="control-label col-xs-2">Stra√üe</label>

                <div class="col-xs-4">
                    <input id="customer_street" class="input-xxlarge" type="text" class="form-control"/>
                </div>

            </div>

            <div class="form-group">
                <label for="customer_zip" class="control-label col-xs-2">PLZ</label>

                <div class="col-xs-4">
                    <input id="customer_zip" class="input-xxlarge" type="text" class="form-control"/>
                </div>
                <label for="customer_location" class="control-label col-xs-2">Ort</label>

                <div class="col-xs-4">
                    <input id="customer_location" class="input-xxlarge" type="text" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <label for="customer_country" class="control-label col-xs-2">Land</label>

                <div class="col-xs-4">
                    <input id="customer_country" class="input-xxlarge" type="text" class="form-control"/>
                </div>

                <label for="customer_addon" class="control-label col-xs-2">Zusatz</label>

                <div class="col-xs-4">
                    <input id="customer_addon" class="input-xxlarge" type="text" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label for="customer_discount" class="control-label col-xs-2">Rabatt</label>

                <div class="col-xs-4">
                    <input id="customer_discount" class="input-xxlarge" type="number" class="form-control"/>
                </div>
            </div>
        </form>
    </div>
</div>