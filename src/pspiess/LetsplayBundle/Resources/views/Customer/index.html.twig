{% extends 'pspiessLetsplayBundle::layout.html.twig' %}

{% block title %}Preise{% endblock %}

{% block nav %}
    {{ knp_menu_render('pspiessLetsplayBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'pspiessLetsplayBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}

{% block body -%}
<div class="page-content-area">
    <div class="page-header">
        <h1>
            Kunden
            <small><i class="ace-icon fa fa-angle-double-right"></i> Bestehende Kunden</small>
            <div class="col-md-2 pull-right">
                <a class="btn btn-success" href="{{ path('pspiess_letsplay_customer_new') }}"> Neu</a>
            </div>
        </h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-md-offset-1 col-xs-10">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                {#<th>Andre</th>#}
                                {#<th>Path</th>#}
                                <th>Kundennummer</th>
                                <th>Nachname</th>
                                <th>Vorname</th>
                                {#<th>Zusatz</th>#}
                                <th>Stra&szlig;e</th>
                                <th>PLZ</th>
                                <th>Ort</th>
                                {#<th>Country</th>#}
                                <th>Telefon</th>
                                <th>Mobil</th>
                                {#<th>Fax</th>#}
                                <th>Bemerkung</th>
                                <th>Rabatt</th>
                                <th>Geburtstag</th>
                                {#<th>Sex</th>#}
{#                                <th>Sepa</th>
                                <th>Bic</th>#}
                                <th>Bezahlart</th>
{#                                <th>Bank</th>
                                <th>Bankowner</th>#}
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
        {% for entity in entities %}
                            <tr>
                                {#<td>{{ entity.title }}</td>#}
                                {#<td>{{ entity.path }}</td>#}
                                <td>{{ entity.customernr }}</td>
                                <td>{{ entity.name }}</td>
                                <td>{{ entity.firstname }}</td>
                                {#<td>{{ entity.addon }}</td>#}
                                <td>{{ entity.street }}</td>
                                <td>{{ entity.zip }}</td>
                                <td>{{ entity.location }}</td>
                                {#<td>{{ entity.country }}</td>#}
                                <td>{{ entity.phone }}</td>
                                <td>{{ entity.mobile }}</td>
                                {#<td>{{ entity.fax }}</td>#}
                                <td>{{ entity.note }}</td>
                                <td>{{ entity.discount }}</td>
                                <td>{% if entity.birthday %}{{ entity.birthday|date('d.m.Y') }}{% endif %}</td>
                                {#<td>{{ entity.sex }}</td>#}
{#                                <td>{{ entity.sepa }}</td>
                                <td>{{ entity.bic }}</td>#}
                                <td>{{ entity.cashing }}</td>
{#                                <td>{{ entity.bank }}</td>
                                <td>{{ entity.bankOwner }}</td>#}
                                <td>
                                    <div class="hidden-sm hidden-xs btn-group">
                                        {{ form_start(deleteForms[entity.id]) }}
                                        <div class="hidden-sm hidden-xs btn-group">
                                            <a class="btn btn-xs btn-info" href="{{ path('pspiess_letsplay_customer_edit', { 'id': entity.id }) }}">
                                                <i class="ace-icon fa fa-pencil icon-only"></i>
                                            </a>
                                            <button type="submit" class="btn btn-danger btn-xs">
                                                <i class="ace-icon fa fa-trash-o icon-only"></i>
                                            </button>
                                        </div>
                                            {{ form_end(deleteForms[entity.id]) }}
                                    </div>
                                </td>
                            </tr>
        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.span -->
            </div><!-- /.row -->
            <div class="hr hr-18 dotted hr-double"></div>
        </div>
    </div>
</div>
{% endblock %}
