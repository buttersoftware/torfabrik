{% extends 'pspiessLetsplayBundle::layout.html.twig' %}

{% block title %}Preise{% endblock %}

{% block nav %}
    {{ knp_menu_render('pspiessLetsplayBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'pspiessLetsplayBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}

{% block body -%}
    <div class="page-content-area">
        <div class="page-header">
            <h1>
                Kunden
                <small><i class="ace-icon fa fa-angle-double-right"></i> {{ entities.getTotalItemCount }} bestehende Kunden</small>
                <div class="col-md-2 pull-right">
                    <a class="btn btn-success" href="{{ path('pspiess_letsplay_customer_new') }}"> Neu</a>
                </div>
            </h1>
        </div><!-- /.page-header -->
        <div class="col-xs-12">
            <div class="col-md-offset-1 col-xs-10" style="padding-bottom: 5px;">
                <form class="form-search" method="get" action="{{ url('pspiess_letsplay_customer') }}">
                    <div class="row">
                        <div class="col-xs-8 col-sm-6">
                            <div class="input-group">
                                <input type="text" name="keyword" class="form-control search-query" placeholder="Bitte hier Suchbegriff eingeben... " />
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-info btn-sm">
                                        <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </form>   
            </div>
            <div class="col-md-offset-1 col-xs-10">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            {#<th>{{ knp_pagination_sortable(entities, 'Kundennummer', 'c.customernr') }}</th>#}
                            {#<th{% if entities.isSorted('c.name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Nachname', 'c.name') }}</th>#}
                            <th>Nachname</th>
                            <th>Vorname</th>
                            <th>Stra&szlig;e</th>
                            <th>PLZ</th>
                            <th>Ort</th>
                            <th>Telefon</th>
                            <th>Mobil</th>
                            <th>Bemerkung</th>
                            <th width="7%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr class="{% if entity.blocked == 1 %} danger {% endif %}">
                                <td>{{ entity.name }}</td>
                                <td>{{ entity.firstname }}</td>
                                <td>{{ entity.street }}</td>
                                <td>{{ entity.zip }}</td>
                                <td>{{ entity.location }}</td>
                                <td>{{ entity.phone }}</td>
                                <td>{{ entity.mobile }}</td>
                                <td>{{ entity.note }}</td>
                                <td>
                                    {{ render(controller('pspiessLetsplayBundle:Customer:deleteCustomer', { 'id': entity.id })) }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="navigation">
                    {{ knp_pagination_render(entities) }}
                </div>
            </div><!-- /.span -->
        </div>
    </div>
{% endblock %}
