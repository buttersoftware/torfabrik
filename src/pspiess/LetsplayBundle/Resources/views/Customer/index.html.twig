{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Customer list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Path</th>
                <th>Customernr</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Addon</th>
                <th>Street</th>
                <th>Zip</th>
                <th>Location</th>
                <th>Country</th>
                <th>Phone</th>
                <th>Mobile</th>
                <th>Fax</th>
                <th>Note</th>
                <th>Discount</th>
                <th>Birthday</th>
                <th>Sex</th>
                <th>Sepa</th>
                <th>Bic</th>
                <th>Cashing</th>
                <th>Bank</th>
                <th>Bankowner</th>
                <th>Created</th>
                <th>Changed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('customer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.path }}</td>
                <td>{{ entity.customernr }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.addon }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.zip }}</td>
                <td>{{ entity.location }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.mobile }}</td>
                <td>{{ entity.fax }}</td>
                <td>{{ entity.note }}</td>
                <td>{{ entity.discount }}</td>
                <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.sex }}</td>
                <td>{{ entity.sepa }}</td>
                <td>{{ entity.bic }}</td>
                <td>{{ entity.cashing }}</td>
                <td>{{ entity.bank }}</td>
                <td>{{ entity.bankOwner }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.changed %}{{ entity.changed|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('customer_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('customer_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('customer_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
