{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Field</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Fieldnr</th>
                <td>{{ entity.fieldnr }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Slots</th>
                <td>{{ entity.slots }}</td>
            </tr>
            <tr>
                <th>Ground</th>
                <td>{{ entity.ground }}</td>
            </tr>
            <tr>
                <th>Care</th>
                <td>{{ entity.care|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Lenght</th>
                <td>{{ entity.lenght }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ entity.width }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ entity.note }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Changed</th>
                <td>{{ entity.changed|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Activation</th>
                <td>{{ entity.activation|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('field') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('field_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
