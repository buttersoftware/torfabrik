{% extends 'pspiessLetsplayBundle::layout.html.twig' %}

{% block title %}Spielfeld ändern{% endblock %}

{% block nav %}
    {{ knp_menu_render('pspiessLetsplayBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'pspiessLetsplayBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}


{% block body -%}
{#{{ form(edit_form) }}#}

<div class="page-content-area">
    <div class="col-xs-12 col-sm-6">
        <div class="widget-box">
            <div class="widget-header">
                <h4 class="widget-title">Ausgew&auml;lten Spielfeld anpassen</h4>
            </div>
            {#{{ form(edit_form) }}#}
            <div class="widget-body">
                <div class="widget-main">
                    {{ form_start(edit_form, {attr: {class: 'form-horizontal'}}) }}
                    <div class="form-group">
                        {{ form_label(edit_form.type, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget    (edit_form.type) }} 
                        </div>
                        {{ form_label(edit_form.slots, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                        <div class="col-sm-2">
                            {{ form_widget (edit_form.slots) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="form-group">
                                {{ form_label(edit_form.ground, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                                <div class="col-sm-2">
                                    {{ form_widget (edit_form.ground) }} 
                                </div>
                                {{ form_label(edit_form.lenght, null, {'label_attr': {'class': 'col-sm-1'}}) }}
                                <div class="col-sm-2">
                                    {{ form_widget (edit_form.lenght) }}
                                </div>
                                {{ form_label(edit_form.width, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                                <div class="col-sm-2">
                                    {{ form_widget (edit_form.width) }} 
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        {#<div class="col-sm-12">#}
                            
                                {{ form_label(edit_form.care, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                                <div class="col-sm-2">
                                    {{ form_widget (edit_form.care) }}
                                    {{ bootstrap_set_simple_col(4) }}
                                </div>
                                {{ form_label(edit_form.activation, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                                <div class="col-sm-2">
                                    {{ form_widget (edit_form.activation) }}
                                </div>
                        {#</div>#}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.note, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                        <div class="col-sm-9">
                            {{ form_widget    (edit_form.note) }} 
                        </div>
                    </div>
                    <div class="hr hr-24"></div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-1">
                            <a class="btn btn-info" href="{{ path('pspiess_letsplay_price') }}">zur&uuml;ck</a>
                        </div>

                        <div class="col-sm-offset-1 col-sm-1">
                           {# {{ form_widget(edit_form.submit) }}#}
                        </div>
                        {{ form_end(edit_form) }}
                        <div class="col-sm-offset-1 col-sm-1">
                        {{ form_start(delete_form) }}
                            <button type="submit" class="btn btn-danger">
                                löschen
                            </button>
                        {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.span -->
    </div><!-- /.row -->    
</div>
{% endblock %}
