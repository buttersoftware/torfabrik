{% extends 'pspiessContentBundle::layout.html.twig' %}
{% set menu = 'index' %}

{% block title %}Folien bearbeiten Admin{% endblock %}

{% block header %}
    {{ parent() }}
    {% render controller('pspiessContentBundle:Navigation:header', {'header': 'Folie ansicht'}) %}
    
<div class="container">
    <div class="span12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titel</th>
                    <th>Inhalt</th>
                    <th>Link</th>
                    <th>Link-Text</th>
                    <th>Rang</th>
                    <th>Bild</th>
                    <th>aktiv</th>
                    <th>erstellt</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.content }}</td>
                    <td>{{ entity.link }}</td>
                    <td>{{ entity.linktext }}</td>
                    <td>{{ entity.rank }}</td>
                    <td>{{ entity.path }}</td>
                    <td>{{ entity.active }}</td>
                    <td>{% if entity.created %}{{ entity.created|date('d.m.Y') }}{% endif %}</td>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="btn-group pull-right">
            <a class="btn btn-info" href="{{ path('slider') }}">Zurück zur Übersicht</a>
            <a class="btn btn-warning"href="{{ path('slider_edit', { 'id': entity.id }) }}">ändern</a>
            <a class="btn btn-primary" href="{{ path('slider_new') }}"> Neue Folie erstellen</a>
        </div>
        <div class="btn-group pull-left">
            {{ form(delete_form) }}
        </div>
    </div>
</div>
{% endblock %}
