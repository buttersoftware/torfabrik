{% extends 'pspiessContentBundle::layout.html.twig' %}
{% set menu = 'index' %}

{% block title %}Folien bearbeiten Admin{% endblock %}

{% block header %}
    {{ parent() }}
    {% render controller('pspiessContentBundle:Navigation:header', {'header': 'Meine Folien'}) %}

<div class="container">
    <div class="span12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <!--<th>Id</th>-->
                    <th>Titel</th>
                    <th>Inhalt</th>
                    <th>Link</th>
                    <th>Link-Text</th>
                    <th>Rang</th>
                    <th>Bild</th>
                    <th>aktiv</th>
                    <th>erstellt</th>
                    <th>ändern</th>
                </tr>
            </thead>
            <tbody>
        {% for entity in entities %}
                <tr>
                    {#<td><a href="{{ path('slider_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.content }}</td>
                    <td>{{ entity.link }}</td>
                    <td>{{ entity.linktext }}</td>
                    <td>{{ entity.rank }}</td>
                    <td>{{ entity.path }}</td>
                    <td>{{ entity.active }}</td>
                    <td>{% if entity.created %}{{ entity.created|date('d.m.Y') }}{% endif %}</td>
                    <td><a class="btn btn-warning" href="{{ path('slider_edit', { 'id': entity.id }) }}">ändern</a>
                {#<ul>
                    <li><a href="{{ path('slider_show', { 'id': entity.id }) }}">zeige</a></li>
                    <li><a href="{{ path('slider_edit', { 'id': entity.id }) }}">ändern</a></li>
                </ul>#}
                    </td>
                </tr>
        {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary pull-right" href="{{ path('slider_new') }}"> Neue Folie erstellen</a>
    </div>
</div>
{% endblock %}
